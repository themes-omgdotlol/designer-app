{
  "name": "profiler",
  "productName": "Profiler",
  "version": "0.0.1",
  "repository": "https://github.com/themes-omgdotlol/designer-app",
  "description": "Profiler",
  "main": "src/private/main.js",
  "scripts": {
    "dev": "npm run development",
    "start": "electron .",
    "build": "electron-builder",
    "increment-version": "versiony package.json --patch && git add . && git commit -m 'new version' && git tag -a '1.0.0' -m '1.0.0' && git push"
  },
  "author": "MatseVH (https://matsevh.eu)",
  "copyright": "Copyright Â© 2021 ${author}",
  "license": "MIT",
  "devDependencies": {
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "versiony": "^2.0.1"
  },
  "dependencies": {
    "electron-updater": "^4.3.9",
    "path": "^0.12.7"
  },
  "output": "dist",
  "build": {
    "appId": "com.electron.profiler",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "uninstallDisplayName": "Profiler - Uninstaller",
      "license": "licenses/license.md",
      "allowToChangeInstallationDirectory": true
    }
  }
}